{
  "name": "caddystate",
  "version": "1.0.0",
  "description": "Caddy reverse proxy monitoring dashboard",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
